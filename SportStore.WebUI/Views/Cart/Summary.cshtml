@model SportStore.Domain.Entities.Cart

<li class="nav-item">
    <span class="navbar-text mr-3">
        <b>Your cart: </b>
        @Model.Lines.Sum(x => x.Quantity) item(s), @Model.ComputeTotalValue().ToString("c")
    </span>
</li>

<li class="nav-item">
    @Html.ActionLink("Checkout","Index", "Cart", new { returnUrl = Request.Url.PathAndQuery},
        new { @class = "nav-link btn btn-light text-dark" })
</li>

